# Environment settings
ENVIRONMENT=development  # Change to 'production' when deploying
DJANGO_SETTINGS_MODULE=heatmaps.settings.dev  # Change to heatmaps.settings.prod in production

# Database settings for development
DB_NAME_DEV=heatmap
DB_USER_DEV=postgres
DB_PASSWORD_DEV=yourpassword
DB_HOST_DEV=localhost
DB_PORT_DEV=5432

# Database settings for production
# Typically, you'll use DATABASE_URL provided by Render instead of these individual settings
DB_NAME=your_production_database_name
DB_USER=your_production_database_user
DB_PASSWORD=your_production_database_password
DB_HOST=your_production_database_host
DB_PORT=5432

# Secret key for Django (used in development, Render will generate its own)
SECRET_KEY=your-secret-key-here

# Note: When deploying to Render, DATABASE_URL will be automatically set
# by Render's PostgreSQL service 